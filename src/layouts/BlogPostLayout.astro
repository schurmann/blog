---
import MainLayout from "./MainLayout.astro";

export interface Props {
    content: {
        title: string;
        description: string;
        pubDate: string;
        updatedDate?: string;
        heroImage?: string;
    };
}

const {
    frontmatter: {title, description, pubDate, updatedDate, heroImage},
} = Astro.props;
---

<MainLayout>
    <main>
        <article>
            {heroImage && (
                    <img
                            width={720}
                            height={360}
                            src={heroImage}
                            alt=""
                    />
            )}
            <h1 class="text-4xl my-1">{title}</h1>
            {pubDate &&
                    <time>{pubDate.toLocaleDateString()}</time>}
            {updatedDate &&
                    <div>Last updated on
                        <time>{updatedDate}</time>
                    </div>}
            <hr class="border-t-2"/>
            <slot/>
        </article>
    </main>
</MainLayout>

<style is:global>
    .anchor svg {
        @apply inline ml-2 content-center mb-1;
    }
</style>