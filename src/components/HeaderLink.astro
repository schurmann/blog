---
const {href, class: className, ...props} = Astro.props;
const isActive = href === Astro.url.pathname;
---

<a
        href={href}
        class:list={[className, {active: isActive}]}
>
    <slot/>
</a>
<style>
    a {
        display: inline-block;
        text-decoration: none;
    }

    a.active {
        font-weight: bolder;
        text-decoration: underline;
    }
</style>
