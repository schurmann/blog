{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "schedule": ["before 4am on monday"],
  "packageRules": [
    {
      "groupName": "all non-major dependencies",
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  automergeType: "branch",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "demos/**"
  ]
}
